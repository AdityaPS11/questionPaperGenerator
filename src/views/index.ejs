<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Question Paper Generator</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1>Question Paper Generator</h1>
  
  <form action="/generate" method="post">
    <label for="totalMarks">Total Marks:</label>
    <input type="number" name="totalMarks" required>
    
    <label for="easyPercentage">Easy Difficulty (%):</label>
    <input type="number" name="easyPercentage" required>
    
    <label for="mediumPercentage">Medium Difficulty (%):</label>
    <input type="number" name="mediumPercentage" required>
    
    <label for="hardPercentage">Hard Difficulty (%):</label>
    <input type="number" name="hardPercentage" required>

    <h3>Topic Distribution (%)</h3>
    <label for="wavesPercentage">Waves:</label>
    <input type="number" name="wavesPercentage" required>

    <label for="opticsPercentage">Optics:</label>
    <input type="number" name="opticsPercentage" required>

    <label for="thermodynamicsPercentage">Thermodynamics:</label>
    <input type="number" name="thermodynamicsPercentage" required>

    <label for="mechanicsPercentage">Mechanics:</label>
    <input type="number" name="mechanicsPercentage" required>

    <!-- Add more topic inputs as needed -->

    <button type="submit">Generate Question Paper</button>
  </form>

  <% if (generatedQuestionPaper) { %>
    <h2>Generated Question Paper:</h2>
    <ul>
      <% generatedQuestionPaper.forEach(question => { %>
        <li><%= question.question %></li>
      <% }); %>
    </ul>
  <% } %>
</body>
</html>
